<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        style="@style/SCREEN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".fragments.ProfileFragment">

        <TextView
            android:id="@+id/tv_profile"
            style="@style/TEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:fontFamily="@font/opensans_bold"
            android:text="Profile"
            android:textSize="@dimen/_20ssp"
            tools:ignore="HardcodedText" />

        <View
            android:id="@+id/line_view"
            style="@style/BACKGROUND"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:layout_below="@id/tv_profile"
            android:layout_marginTop="@dimen/_12sdp"
            android:elevation="@dimen/_20sdp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_profile"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_below="@id/line_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_50sdp"
            android:src="@drawable/profile_img"
            app:civ_border_color="@color/black"
            app:civ_border_width="@dimen/_1sdp" />

        <TextView
            android:id="@+id/tvName"
            style="@style/TEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/civ_profile"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:fontFamily="@font/opensans_bold"
            android:text="@string/f_name"
            android:textSize="@dimen/_13ssp" />

        <TextView
            android:id="@+id/txt_tvName"
            style="@style/TEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/civ_profile"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_toEndOf="@id/tvName"
            android:fontFamily="@font/opensans_regular"
            android:textSize="@dimen/_13ssp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tvEmail"
            style="@style/TEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_tvName"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/opensans_bold"
            android:text="@string/col_email"
            android:textSize="@dimen/_13ssp" />

        <TextView
            android:id="@+id/txt_tvEmail"
            style="@style/TEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_tvName"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_toEndOf="@id/tvEmail"
            android:fontFamily="@font/opensans_regular"
            android:textSize="@dimen/_13ssp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tvPhone"
            style="@style/TEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_tvEmail"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/opensans_bold"
            android:text="@string/col_phone_no"
            android:textSize="@dimen/_13ssp" />

        <TextView
            android:id="@+id/txt_tvPhone"
            style="@style/TEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_tvEmail"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_toEndOf="@id/tvPhone"
            android:fontFamily="@font/opensans_regular"
            android:textSize="@dimen/_13ssp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tvCity"
            style="@style/TEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_tvPhone"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/opensans_bold"
            android:text="@string/col_city"
            android:textSize="@dimen/_13ssp" />

        <TextView
            android:id="@+id/txt_tvCity"
            style="@style/TEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_tvPhone"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_toEndOf="@id/tvCity"
            android:fontFamily="@font/opensans_regular"
            android:paddingStart="@dimen/_10sdp"
            android:textSize="@dimen/_13ssp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tvBlood"
            style="@style/TEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_tvCity"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/opensans_bold"
            android:text="@string/col_blood_type"
            android:textSize="@dimen/_13ssp" />

        <TextView
            android:id="@+id/txt_tvBlood"
            style="@style/TEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_tvCity"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_toEndOf="@id/tvBlood"
            android:fontFamily="@font/opensans_regular"
            android:paddingStart="@dimen/_10sdp"
            android:textSize="@dimen/_13ssp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tvLightDarkMode"
            style="@style/TEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBlood"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_26sdp"
            android:fontFamily="@font/opensans_bold"
            android:text="@string/theme_light_dark"
            android:textSize="@dimen/_15ssp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchCompat"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@id/txt_tvBlood"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_25sdp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_logout"
            style="@style/BUTTON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLightDarkMode"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/opensans_bold"
            android:text="@string/logout"
            android:textColor="@color/white" />

    </RelativeLayout>

</ScrollView>