<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeScreenFragment">

    <View
        android:id="@+id/bgView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_330sdp"
        android:background="@color/red" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_100sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:background="@drawable/custom_fdonor_view"
        android:elevation="@dimen/_30sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_22sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/opensans_bold"
            android:text="@string/find_donor"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp" />

        <EditText
            android:id="@+id/edt_location"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/custom_edt"
            android:drawableEnd="@drawable/loc"
            android:elevation="@dimen/_5sdp"
            android:fontFamily="@font/opensans_regular"
            android:hint="@string/location"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingStart="@dimen/_13sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:textColorHint="@color/black"
            tools:ignore="RtlSymmetry" />

        <Spinner
            android:id="@+id/spn_gender"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/custom_edt"
            android:elevation="@dimen/_5sdp"
            android:fontFamily="@font/opensans_regular"
            android:paddingStart="@dimen/_10sdp"
            tools:ignore="RtlSymmetry" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_120sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/custom_btnsubmit"
            android:fontFamily="@font/opensans_semibold"
            android:text="@string/search"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>


